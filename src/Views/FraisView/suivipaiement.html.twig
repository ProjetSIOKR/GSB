{% extends "layout.html.twig" %}
{% block entete %}
    {% include "AppView/entete.html.twig" %}
{% endblock %}
{% block contenu %}
    <h2>Fiches de frais validées</h2>
    <div class="row">
        <div class="">
            <form action="/voiretatfrais" method="post" role="form">
                <div class="form-group">
                    <table class="table table-striped table-bordered shadow" id="datatable">
                        <thead>
                        <tr>
                            <th> </th>
                            <th>Visiteur</th>
                            <th>Mois fiche de frais</th>
                            <th>Montant Validé</th>
                            <th>Date de validation de la fiche de frais</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for uneFiche in fichesValidees %}
                                <tr>
                                    <td><input class="btnselect" type="checkbox" name="{{uneFiche.idvisiteur}}{{uneFiche.mois}}" data_mois={{ uneFiche.mois }} data_id="{{ uneFiche.idvisiteur }}" data-toggle="modal" data-target="#modal"></td>
                                    <td>{{ uneFiche.prenom }} {{ uneFiche.nom }}</td>
                                    <td>{{ uneFiche.mois }}</td>
                                    <td>{{ uneFiche.montantvalide }}</td>
                                    <td>{{ uneFiche.datemodif }}</td>
                                </tr>
                             {% endfor %}x
                        </tbody>
                    </table>
                    <table class="table table-bordered shadow">
                        <thead>
                        <tr>
                            <th>Visiteur</th>
                            <th>Total frais forfait</th>
                            <th>Total frais hors forfait</th>
                            <th>Total </th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr id="details">
                            </tr>
                        </tbody>
                    </table>
                </div>
                <input id="ok" type="submit" value="Valider" class="btn btn-success"
                       role="button">
                <input id="annuler" type="reset" value="Effacer" class="btn btn-danger"
                       role="button">
            </form>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
    </script>
{% endblock %}